<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_third_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_third_logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/ll_third_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_third_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="App名称"
            android:textSize="16sp"
            android:textColor="@color/moredeep_grey"/>

        <TextView
            android:id="@+id/tv_third_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="App版本"
            android:textSize="14sp"
            android:singleLine="true"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tv_third_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="App大小"
            android:textSize="14sp"
            android:textColor="@color/gray" />

       <!-- <TextView
            android:id="@+id/tv_third_packagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="App包名称"
            android:focusable="false"
            android:textColor="@color/grey2" />-->
    </LinearLayout>


    <Button
        android:id="@+id/btn_third_delete"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:background="@drawable/item_btn_selector"
        android:layout_marginRight="10dp"
        android:text="卸 载"
        android:textSize="14sp"
        android:textColor="@color/grey3"
        android:gravity="center"

        />

