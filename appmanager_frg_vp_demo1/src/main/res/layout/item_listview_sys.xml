<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_sys_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_sys_logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/ll_sys_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sys_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="App名称"
            android:textSize="14sp"
            android:textColor="@color/moredeep_grey"/>

        <TextView
            android:id="@+id/tv_sys_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="App版本"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tv_sys_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="App大小"
            android:textSize="12sp"
            android:textColor="@color/gray" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_sys_packagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="App包名称"
            android:textSize="12sp"
            android:textColor="@color/gray" />
    </LinearLayout>
</LinearLayout>
