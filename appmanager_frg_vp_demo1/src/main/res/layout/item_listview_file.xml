<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/imgv_file_icon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/folder"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:id="@+id/ll_file_text"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imgv_file_icon"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游轮"
            android:textColor="@color/moredeep_grey"
            android:textSize="16sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/txv_file_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-1-1 10:06"
            android:textColor="#9f9f9f"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>


</RelativeLayout>